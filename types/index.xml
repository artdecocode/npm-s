<types namespace="_npmS">
  <record name="Config" desc="Options for the program.">
    <prop type="!Array<string>" name="scripts">
      The scripts to execute.
    </prop>
    <prop type="!Array<string>" name="args" opt>
      Any additional arguments, e.g., `[--scripts-prepend-node-path]`.
    </prop>
  </record>
  <record name="ScriptResult" desc="The result of a script.">
    <prop number name="code">
      The exit code.
    </prop>
    <prop string name="stdout">
      The stdout of the program.
    </prop>
    <prop string name="stderr">
      The stderr of the program.
    </prop>
  </record>
</types>